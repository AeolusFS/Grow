<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grow.cmputf17team4.grow.ActivityCreateHabit">

    <EditText
        android:id="@+id/create_habit_event_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="@string/habit_name_here"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/create_habit_event_reason"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/create_habit_event_name"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/reason_to_play"
        />

    <TextView
        android:id="@+id/create_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_habit_event_reason"
        android:layout_alignStart="@id/create_habit_event_reason"
        android:layout_marginTop="50dp"
        android:text="@string/planned_time_for_each_habit"
        android:textSize="12sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/text_30_mins"
        android:textSize="12sp"
        android:layout_toEndOf="@id/create_duration"
        android:layout_below="@id/create_habit_event_reason"
        android:layout_alignBaseline="@id/create_duration"
        android:layout_alignEnd="@id/habit_event_reason"
        android:gravity="center"
        android:id="@+id/editText_create_duration" />

    <Button
        android:id="@+id/create_habit_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_create_duration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/finish" />

    <Switch
        android:id="@+id/create_habit_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_create_duration"
        android:layout_alignStart="@+id/create_duration"
        android:text="Daily Goal" />


</RelativeLayout>
