<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grow.cmputf17team4.grow.ActivityModifyHabit">

    <EditText
        android:id="@+id/modify_habit_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/modify_habit_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Name: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/modify_habit_edit_name"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/modify_habit_text_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason: "
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/modify_habti_edit_reason"
        android:layout_marginRight="7dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/modify_habit_text_name" />

    <EditText
        android:id="@+id/modify_habti_edit_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/modify_habit_edit_name"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/modify_habit_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/editText3"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/modify_habit_text_reason" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/modify_habti_edit_reason" />

    <TextView
        android:id="@+id/modify_habit_text_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Repeat:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/modify_habit_text_date"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/modify_habit_text_repeat"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/modify_habti_btn_confirm"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="32dp"
        app:layout_constraintHorizontal_bias="0.0">

        <CheckBox
            android:id="@+id/checkedTextView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/check"
            android:checked="false"
            android:text="     Every Sunday"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkedTextView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Every Monday"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkedTextView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Every Tuesday"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkedTextView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Every Wednesday"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkedTextView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Every Thursday"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkedTextView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="     Every Friday"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkedTextView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Every Saturday"
            android:textSize="18sp" />


    </LinearLayout>

    <Button
        android:id="@+id/modify_habti_btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Confirm"
        app:layout_constraintBottom_toTopOf="@+id/modify_btn_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/modify_btn_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorDelete"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
